<style>
  #button1 , #button2 {
    display:inline-block;
  }
  .divide {
    width:20px;
    height:auto;
    display:inline-block;
  } 
</style>

<h2>Event: <%= @current_event.title %></h2>
Host: <%= @current_event.user.name %>
<br><br>
Description: <%= @current_event.description %>
<br><br>
Location: <%= @current_event.location %>
<br><br>
Date: <%= @current_event.date %>
<br><br>
Time: <%= @current_event.time %>
<br><br>

<% if @current_event.user == current_user %>
  <div id="button1">
    <a href="/events/<%= @current_event.id %>/edit" %><button>Edit Event</button></a>
  </div>

  <div class="divide"></div>

  <div id="button2">
    <form method="post" action="/events/<%= @current_event.id %>">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Delete Event">
    </form>
  </div>
<% end %>

